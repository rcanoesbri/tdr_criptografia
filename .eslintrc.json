{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": "warn",
    "curly": "error",
    "no-alert": "error",
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "no-shadow": "error",
    "no-implicit-coercion": "error",
    "block-spacing": "error",
    "comma-spacing": "error",
    "comma-style": "error",
    "eol-last": ["error", "always"],
    "func-call-spacing": ["error", "never"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true, "mode": "strict" }],
    "lines-between-class-members": ["warn", "always"],
    "no-lonely-if": "error",
    "semi-spacing": ["error", {"before": false, "after": true}],
    "arrow-spacing": "error",
    "no-var": "warn"
  }
}
